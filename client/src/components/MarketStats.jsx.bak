import { TrendingUp, TrendingDown, Clock, Activity } from 'lucide-react';

export default function MarketStats({ stats }) {
    if (!stats) return null;

    const upCount = Number(stats.up_count || 0);
    const downCount = Number(stats.down_count || 0);
    const total = Number(stats.total_stocks || 0);
    const date = stats.latestdate || stats.latestDate || '-';
    const upPercent = total > 0 ? (upCount / total * 100).toFixed(1) : 0;

    return (
        <div className="bg-white border-b border-gray-200">
            <div className="container mx-auto px-4 h-12 flex items-center justify-between text-[13px]">
                <div className="flex items-center gap-6 overflow-x-auto no-scrollbar scroll-smooth">
                    <div className="flex items-center gap-2 whitespace-nowrap">
                        <span className="bg-brand-primary/10 text-brand-primary p-1 rounded-sm">
                            <Activity className="w-3.5 h-3.5" />
                        </span>
                        <span className="font-bold text-slate-800">市場即時概況</span>
                    </div>

                    <div className="h-4 w-px bg-gray-200 hidden sm:block"></div>

                    <div className="flex items-center gap-1.5 whitespace-nowrap">
                        <span className="text-gray-500">總股數</span>
                        <span className="font-semibold text-brand-dark tabular-nums">{total.toLocaleString()}</span>
                    </div>

                    <div className="flex items-center gap-4">
                        <div className="flex items-center gap-1.5 whitespace-nowrap group">
                            <span className="text-gray-500 group-hover:text-brand-success transition-colors">上漲</span>
                            <div className="flex items-center gap-1 font-bold text-brand-success tabular-nums">
                                <TrendingUp className="w-3.5 h-3.5" />
                                <span>{upCount.toLocaleString()}</span>
                                <span className="text-[11px] font-medium opacity-70">({upPercent}%)</span>
                            </div>
                        </div>

                        <div className="flex items-center gap-1.5 whitespace-nowrap group">
                            <span className="text-gray-500 group-hover:text-brand-danger transition-colors">下跌</span>
                            <div className="flex items-center gap-1 font-bold text-brand-danger tabular-nums">
                                <TrendingDown className="w-3.5 h-3.5" />
                                <span>{downCount.toLocaleString()}</span>
                            </div>
                        </div>
                    </div>
                </div>

                <div className="hidden sm:flex items-center gap-2 text-gray-400 bg-gray-50 px-2 py-1 rounded border border-gray-100 italic font-medium text-[11px] whitespace-nowrap">
                    <Clock className="w-3 h-3" />
                    <span>資料時間：{date}</span>
                </div>
            </div>
        </div>
    );
}
