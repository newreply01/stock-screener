{
  "name": "stock-screener",
  "version": "1.0.0",
  "description": "台股篩選器 - 類似 WantGoo Screener",
  "private": true,
  "scripts": {
    "server": "node server/index.js",
    "client": "cd client && npm run dev",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "fetch-data": "node server/fetcher.js",
    "init-db": "node server/db.js --init",
    "build": "cd client && npm run build",
    "start": "NODE_ENV=production node server/index.js"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "google-auth-library": "^10.6.1",
    "jsonwebtoken": "^9.0.3",
    "node-cron": "^3.0.3",
    "node-fetch": "^3.3.2",
    "pg": "^8.18.0",
    "technicalindicators": "^3.1.0"
  },
  "devDependencies": {
    "concurrently": "^9.1.2"
  }
}
